services:
  manga-tool:
    build: .
    container_name: manga-tool
    user: "1000:1000"  # Run as your user ID to avoid root-owned files
    volumes:
      - /mnt:/mnt
      - ./config:/config
      - /etc/localtime:/etc/localtime:ro
    environment:
      - REALDEBRID_API_KEY=
      - MANGA_BASE_DIR=
      - PORT=25000
      - PARALLELISM=
      - KOMGA_URL=
      - KOMGA_USERNAME=
      - KOMGA_PASSWORD=
      - KOMGA_LIBRARIES=
      - KOMGA_REFRESH_ENABLED=
    restart: unless-stopped